<!DOCTYPE html>
<html>
  <head>
    <title>Tokespace</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-secondary sticky-top">
        <div class="container">
            <a class="navbar-brand py-2"><%= link_to 'Tokespace', root_path, class: "btn btn-outline-light", style: "font-size: large" %></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <% if user_signed_in? %>
                <ul class="navbar-nav ms-auto py-0">
                    <div class="d-flex col mt-1 px-2">
                      <li class="nav-item px-2"><%= link_to 'Posts', posts_path, class: 'btn btn-outline-light', style: "font-size: large"%></li>
                      <li class="nav-item px-2"><%= link_to 'Crypto News', news_path, class: 'btn btn-outline-light', style: "font-size: large" %></li>
                    </div>
                    <li class="nav-item dropdown d-flex flex-row-reverse">
                        <a class="nav-link dropdown-toggle py-0 mb-0 pb-0" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><%= link_to current_user.username, user_path(current_user), class: 'nav-link text-white mb-0 py-3 h3' %></a>
                        <ul class="dropdown-menu dropdown-menu-end py-5 justify-center text-center" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="#"><%= link_to 'Edit account', edit_user_registration_path, class: 'text-dark h3 py-0' %></a></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><a class="dropdown-item" href="#"><%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'text-danger h3 py-0' %></a></li>
                        </ul>
                    </li>
                </ul>
              <% end %>
            </div>
        </div>
    </nav>

    <% if flash[:notice]%>
        <p class="notice"><%= notice %></p>
    <% end %>
    <% if flash[:alert]%>
        <p class="alert"><%= alert %></p>
    <% end %>
      
    <%= yield %>
  </body>

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</html>
